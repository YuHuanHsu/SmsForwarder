<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_round_corner_primary"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backup_restore_info"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/backup_restore_description"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <com.xuexiang.xui.widget.grouplist.XUIGroupListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.xuexiang.xui.widget.button.SmoothCheckBox
            android:id="@+id/btn_export_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/export_settings"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:sb_color_unpressed="@color/colorPrimary"
            app:sb_ripple_color="@color/white"
            app:sb_ripple_duration="500"
            app:sb_shape_type="rectangle" />

    </com.xuexiang.xui.widget.grouplist.XUIGroupListView>

    <com.xuexiang.xui.widget.grouplist.XUIGroupListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.xuexiang.xui.widget.button.SmoothCheckBox
            android:id="@+id/btn_import_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/import_settings"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:sb_color_unpressed="@color/colorAccent"
            app:sb_ripple_color="@color/white"
            app:sb_ripple_duration="500"
            app:sb_shape_type="rectangle" />

    </com.xuexiang.xui.widget.grouplist.XUIGroupListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/backup_files_status"
        android:textColor="@color/xui_config_color_gray_6"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_backup_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_corner_light"
        android:padding="12dp"
        android:text="@string/backup_files_loading"
        android:textColor="@color/xui_config_color_gray_7"
        android:textSize="12sp" />

</LinearLayout>